#
# Defines the part type that this project uses.
#
PART=LM3S8971

#
# The base directory for StellarisWare.
#
ROOT=../../..

#
# Include the common make definitions.
#
include ${ROOT}/makedefs

#
# Where to find source files that do not live in this directory.
#
VPATH=../../../utils

#
# Where to find header files that do not live in the source directory.
#
IPATH=.
IPATH+=../../..
IPATH+=../../../third_party/lwip-1.3.2/ports/stellaris/include
IPATH+=../../../third_party/lwip-1.3.2/src/include
IPATH+=../../../third_party/lwip-1.3.2/src/include/ipv4

#
# The default rule, which causes the BLDC Motor Application to be built.
#
all: ${COMPILER}
all: ${COMPILER}/qs-bldc.axf

#
# The rule to clean out all the build products.
#
clean:
	@rm -rf ${COMPILER} ${wildcard *~}

#
# The rule to create the target directory.
#
${COMPILER}:
	@mkdir -p ${COMPILER}

#
# Rules for building the BLDC Motor Application.
#
${COMPILER}/qs-bldc.axf: ${COMPILER}/adc_ctrl.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/brake.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/cpu_usage.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/flash_pb.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/hall_ctrl.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/lwiplib.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/main.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/pwm_ctrl.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/sine.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/sinemod.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/speed_sense.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/startup_${COMPILER}.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/trapmod.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/ui.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/ui_can.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/ui_ethernet.o
${COMPILER}/qs-bldc.axf: ${COMPILER}/ui_onboard.o
${COMPILER}/qs-bldc.axf: ${ROOT}/driverlib/${COMPILER}-cm3/libdriver-cm3.a
${COMPILER}/qs-bldc.axf: qs-bldc.ld
SCATTERgcc_qs-bldc=qs-bldc.ld
ENTRY_qs-bldc=ResetISR

#
# Include the automatically generated dependency files.
#
ifneq (${MAKECMDGOALS},clean)
-include ${wildcard ${COMPILER}/*.d} __dummy__
endif
